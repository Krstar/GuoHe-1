<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lyy.newjust.com.lyy.newjust.activity.School.SchoolBusActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/school_bus_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="校车时刻"
                    android:textColor="@color/material_white_1000"
                    android:textSize="20sp" />
            </android.support.v7.widget.Toolbar>

            <ProgressBar
                android:id="@+id/school_bus_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="3dip"
                android:progressDrawable="@drawable/bg_progress"
                android:visibility="gone" />

            <WebView
                android:id="@+id/school_bus_webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </WebView>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_bus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            app:backgroundTint="@color/material_white_1000"
            app:borderWidth="0dp"
            app:elevation="8dp"
            app:srcCompat="@drawable/ic_menu_school_bus" />

    </FrameLayout>

</LinearLayout>
